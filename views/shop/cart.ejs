<div class="cart-products text-muted">
  <div class="container">
    <% if (products) { %>
    <div class="mt-3 row">
      <div class="col col-md-8 offset-md-2">
        <div class="list-group">
          <% products.forEach(function (item) { %>
              <div class="mb-1 list-group-item flex-column align-items-start">
                <div class="mb-2 d-flex w-100 justify-content-between">
                  <h5><a href=""><%= item.item.title %></a></h5>
                  <div>
                    <span class="badge badge-default badge-pill">-</span>
                    <span class="badge badge-info badge-pill"><%= item.qty %></span>
                    <span class="badge badge-default badge-pill">+</span>
                  </div>
                </div>
                <div class="d-flex w-100 justify-content-between">
                  <p><small><%= item.item.description %></small></p>
                  <small>Rs. <%= item.price %></small>
                </div>
              </div>
          <% }); %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col col-md-8 offset-md-2">
        <div class="mt-3 d-flex w-100 justify-content-between">
          <h5>Total <span>Rs. <%= totalPrice %>/-</span></h5>
          <a href="/checkout" class="btn btn-success btn-small">Checkout</a>
        </div>
      </div>
    </div>

    <% } else { %>

    <div class="mt-3 row">
      <div class="col col-md-8 offset-md-2">
        <h2 class="text-center">No Items in Cart</h2>
      </div>
    </div>

    <% } %>
  </div>
</div>
